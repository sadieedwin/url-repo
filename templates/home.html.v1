<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>URL Repository</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
    <div class="container">
        <h1 class="mb-4">URL Repository</h1>

        <!-- Search Form -->
        <form method="GET" action="{{ url_for('home') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search links..." value="{{ search_query or '' }}">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>

        <!-- Flash messages -->
        {% with messages = get_flashed_messages(with_categories=true) %}
          {% if messages %}
            {% for category, message in messages %}
              <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            {% endfor %}
          {% endif %}
        {% endwith %}

        <a href="{{ url_for('home') }}" class="btn btn-primary mb-3">Home</a>

        <!-- Tag Filters -->
{% if all_tags %}
<div class="mb-3">
    <strong>Filter by Tag:</strong>
    {% for tag in all_tags %}
        <a href="{{ url_for('home', tag=tag) }}" class="btn btn-outline-secondary btn-sm">{{ tag }}</a>
    {% endfor %}
    {% if tag_filter %}
        <a href="{{ url_for('home') }}" class="btn btn-sm btn-info ms-2">Clear Filter</a>
    {% endif %}
</div>
{% endif %}


        <!-- Links Table -->
        {% if links.items %}
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>URL</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Created</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                {% for link in links.items %}
                <tr>
                    <td>{{ link.title }}</td>
                    <td><a href="{{ link.url }}" target="_blank">{{ link.url }}</a></td>
                    <td>{{ link.description }}</td>
                    <td>{{ link.tags }}</td>
                    <td>{{ link.created_at.strftime('%Y-%m-%d') }}</td>
                    <td><a href="{{ url_for('edit_link', id=link.id) }}" class="btn btn-sm btn-warning">Edit</a></td>
                    <td>
                        <form action="{{ url_for('delete_link', id=link.id) }}" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this link?');">Delete</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Pagination Controls -->
<div class="pagination">
    {% if links.has_prev %}
        <a href="{{ url_for('home', page=links.prev_num) }}" class="btn btn-secondary">Previous</a>
    {% endif %}
    
    {% if links.has_next %}
        <a href="{{ url_for('home', page=links.next_num) }}" class="btn btn-secondary">Next</a>
    {% endif %}
</div>
{% else %}
    <p>No links found.</p>
{% endif %}


        <!-- Add New Link Button -->
        <a href="{{ url_for('add_link') }}" class="btn btn-success mt-4">Add New Link</a>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html> 
